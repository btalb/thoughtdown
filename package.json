{
  "name": "thoughtdown",
  "version": "0.3.2",
  "description": "Transform thoughts into HTML (powered by Markdown)",
  "main": "./dist/bundle.js",
  "private": true,
  "scripts": {
    "build": "webpack",
    "format": "prettier --write . && eslint --fix .",
    "prepare": "npm run build",
    "start": "webpack --watch",
    "test": "tsc --project tests/ && npm run test:run",
    "test:run": "TS_NODE_PROJECT=tests/tsconfig.json node -r tsconfig-paths/register tests/debug.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btalb/thoughtdown.git"
  },
  "keywords": [
    "markdown",
    "d3",
    "html",
    "charts",
    "maths"
  ],
  "author": "Ben Talbot",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/btalb/thoughtdown/issues"
  },
  "homepage": "https://github.com/btalb/thoughtdown#readme",
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@types/jsdom": "^20.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.6.5",
    "@types/prettier": "^2.7.1",
    "nodemon": "^2.0.19",
    "npm-dts-webpack-plugin": "^1.3.12",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "d3": "^7.6.1",
    "eslint": "^8.21.0",
    "eslint-config-google": "^0.14.0",
    "jsdom": "^20.0.3",
    "markdown-it": "^13.0.1",
    "markdown-it-highlightjs": "^4.0.1",
    "prettier": "^2.7.1",
    "seedrandom": "^3.0.5",
    "yaml": "^2.1.1"
  }
}
